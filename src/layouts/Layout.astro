---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const {
	title = 'Gambarno â€” Imagine Boldly',
	description =
		"Create breathtaking visuals in seconds. Gambarno's AI art studio turns everyday prompts into extraordinary images.",
} = Astro.props as Props;
---

<!doctype html>
<html
	lang="en"
	class="scroll-smooth bg-slate-950 text-slate-100 antialiased"
>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="theme-color" content="#0f172a" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Plus+Jakarta+Sans:wght@500;700&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body class="relative min-h-screen bg-slate-950">
		<a
			href="#main"
			class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-md focus:bg-emerald-500 focus:px-4 focus:py-2 focus:text-slate-900"
		>
			Skip to main content
		</a>
		<div
			class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(circle_at_top,_rgba(16,185,129,0.25),_transparent_55%)]"
			aria-hidden="true"
		></div>
		<div class="relative mx-auto flex min-h-screen max-w-[120rem] flex-col px-4 sm:px-6 lg:px-12">
			<slot />
		</div>
	</body>
</html>
